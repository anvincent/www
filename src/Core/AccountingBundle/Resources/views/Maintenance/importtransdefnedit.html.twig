{# src/Core/AccountingBundle/Resources/views/Maintenance/importtransdefnedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Transaction Import Definitions{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Account Groups
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Edit Transaction Import Definitions 
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
            	<div class="row">
                	<div class="col-lg-6">
                    	{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                    	<div class="form-group">
                    		{{ form_label(form.accountname, 'Account Name') }}
							{{ form_errors(form.accountname) }}
							{{ form_widget(form.accountname, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataheader_defn, 'Header Definition') }}
							{{ form_errors(form.dataheader_defn) }}
							{{ form_widget(form.dataheader_defn, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataline_account, 'Account position definition') }}
							{{ form_errors(form.dataline_account) }}
							{{ form_widget(form.dataline_account, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataline_narrative, 'Narrative position definition') }}
							{{ form_errors(form.dataline_narrative) }}
							{{ form_widget(form.dataline_narrative, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataline_amount, 'Amount position definition') }}
							{{ form_errors(form.dataline_amount) }}
							{{ form_widget(form.dataline_amount, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataline_date, 'Date position definition') }}
							{{ form_errors(form.dataline_date) }}
							{{ form_widget(form.dataline_date, {'attr': {'class': 'form-control'}}) }}
                           </div>
                    	<div class="form-group">
                    		{{ form_label(form.dataline_tag, 'Tag position definition') }}
							{{ form_errors(form.dataline_tag) }}
							{{ form_widget(form.dataline_tag, {'attr': {'class': 'form-control'}}) }}
                           </div>
                           <div class="form-group">
							{{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
						</div>
						<div style="display: none;">
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>			
		</div>				
	</div>
</div>

{% endblock %}