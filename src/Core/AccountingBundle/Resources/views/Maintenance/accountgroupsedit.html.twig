{# src/Core/AccountingBundle/Resources/views/Maintenance/accountgroupsedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Account Groups{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Account Groups
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Edit Account Groups
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
            	<div class="row">
                	<div class="col-lg-6">
                    	{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                    		<div class="form-group">
                    			{{ form_label(form.groupname, 'Group Name') }}
								{{ form_errors(form.groupname) }}
								{{ form_widget(form.groupname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    		<div class="form-group">
                    			{{ form_label(form.sectioninaccounts, 'Account Section') }}
								{{ form_errors(form.sectioninaccounts) }}
								{{ form_widget(form.sectioninaccounts, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    		<div class="form-group">
                    			{{ form_label(form.pandl, 'B/S or I/S') }}
								{{ form_errors(form.pandl) }}
								{{ form_widget(form.pandl, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    		<div class="form-group">
                    			{{ form_label(form.sequenceintb, 'Trial Balance Sequence') }}
								{{ form_errors(form.sequenceintb) }}
								{{ form_widget(form.sequenceintb, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    		<div class="form-group">
                    			{{ form_label(form.parentgroupname, 'Parent Group (if any)') }}
								{{ form_errors(form.parentgroupname) }}
								{{ form_widget(form.parentgroupname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
								{{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
							</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>			
		</div>				
	</div>
</div>

{% endblock %}