{# src/Core/AccountingBundle/Resources/views/Maintenance/tagsedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Transaction Tags{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Transaction Tags
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Edit Transaction Tags
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
            	<div class="row">
                	<div class="col-lg-6">
                    	{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                    		<div class="form-group">
                    			{{ form_label(form.tagref, 'Tag Ref') }}
								{{ form_errors(form.tagref) }}
								{{ form_widget(form.tagref, {'attr': {'class': 'form-control-static'}}) }}
                            </div>
                    		<div class="form-group">
                    			{{ form_label(form.tagdescription, 'Tag Description') }}
								{{ form_errors(form.tagdescription) }}
								{{ form_widget(form.tagdescription, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
								{{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
							</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>			
		</div>				
	</div>
</div>

{% endblock %}