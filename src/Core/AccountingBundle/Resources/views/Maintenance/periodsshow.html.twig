{# src/Core/AccountingBundle/Resources/views/Maintenance/chartmastershow.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Fiscal Periods{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Display Fiscal Periods
{% endblock %}

{% block body %}

{% for flashMessage in app.session.flashbag.get('returnMessage') %}
<div class="row">
	<div class="alert alert-info" role="alert">
        {{ flashMessage }}
    </div>
</div>
{% endfor %}
<div class="row">
	<div class="col-lg-6">
		<div class="panel panel-default">
            <div class="panel-heading">
            	Fiscal period starting date
            </div>
            <div class="panel-body">
            	{{ periodstart.getLastdateinperiod|date('Y-m-d') }}
            	<button type="button" class="btn btn-default">
        			<a href="#"><i class="fa fa-calendar fa-fw"></i></a>
        		</button>
            </div>
        </div>
	</div>
	<div class="col-lg-6">
		<div class="panel panel-default">
            <div class="panel-heading">
            	Final fiscal period defined
            </div>
            <div class="panel-body">
            	{{ periodend.getPeriodno }} - {{ periodend.getLastdateinperiod|date('Y-m-d') }}
            	<button type="button" class="btn btn-default">
        			<a href="{{ path('CoreAccountingBundle_maintenance_periods_update') }}">
        				<i class="fa fa-refresh fa-fw"></i>
        			</a>
        		</button>
            </div>
        </div>
        
	</div>
	<div class="col-lg-12">
		<div class="panel panel-default">
            <div class="panel-body">
            	<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead><tr>
							<th>Period Nr.</th>
							<th>Period End Date</th>
						</tr></thead>
						<tbody>
						{% for period in periods %}
					    <tr>
					    	<td>{{ period.getPeriodno }}</td>
					    	<td>{{ period.getLastdateinperiod|date('Y-m-d') }}</td>
						</tr>
					    {% else %}
					        <p>There are no fiscal periods established</p>
					    {% endfor %}
					    </tbody>
					</table>
				</div>
				<!-- /.table-responsive -->
			</div>
            <!-- /.panel-body -->
            
		</div>
        <!-- /.panel -->
	</div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

{% endblock %}

